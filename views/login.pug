//- login.pug - 로그인폼
extends partials/base.pug

block content
	div.page-header
	div.row
		div.col-md-3
		div.col-md-6
			article.panel.panel-default
				div.panel-body
					div.text-center
						h2 
							i.fa.fa-lock
							| &nbsp; Login
					hr
					form(name="loginForm" action="/auth/login" method="POST")
						div.form-group
							label(for="uname") User Name
							div.input-group
								span.input-group-addon#basic-addon1
									i.fa.fa-user
								input.form-control#uname(type='text' name='username' placeholder='아이디' aria-describeby='basic-addon1')
						div.form-group
							label(for="pwd") Password
							div.input-group
								span.input-group-addon#basic-addon2
									i.fa.fa-key
								input.form-control#pwd(type='password' name='password' placeholder='비밀번호' aria-describeby='basic-addon2')
						br
						button.btn.btn-primary.btn-block.btn-lg(type='submit' onclick='return formLogin()')
							i.glyphicon.glyphicon-log-in
							| &nbsp;&nbsp; Login
						br
						a.btn.btn-info.btn-block.btn-lg(href='/auth/facebook')
							i.fa.fa-facebook(aria-hidden='true')
							| &nbsp;&nbsp; Facebook Login
block scripts
	script.
		function formLogin() {
			var form = document.loginForm;
			if(!form.username.value) {
				alert('사용자 아이디를 입력하세요.');
				form.username.focus();
				return false;
			}
			if(!form.password.value) {
				alert('사용자 비밀번호를 입력하세요.');
				form.password.focus();
				return false;
			}
			form.submit();
			return true;	
		}