							li
								a(href="/auth/profile")
									span.glyphicon.glyphicon-user
									| &nbsp; #{whoami} 님
							li
								a(href="/auth/logout")
									span.glyphicon.glyphicon-log-out
									|  &nbsp; 로그아웃
